<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="City Title"
       android:id="@+id/favouritesCityTitleTextView"/>

    <TextView
        android:paddingTop="2dp"
        android:text="Temp Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecastWindSpeedTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecastUnits"
        android:text="Mph"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp Time"
        android:id="@+id/forecastTimeTextView"
        android:gravity="center_horizontal"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/mini_compass"
            android:layout_height="@dimen/mini_compass"
            android:id="@+id/miniCompasBackgroundImageView"
            android:background="@drawable/mini_compass_background"/>

        <ImageView
            android:layout_width="@dimen/mini_compass"
            android:layout_height="@dimen/mini_compass"
            android:id="@+id/minCompassPointerImageView"
            android:background="@drawable/compass_pointer"/>
    </RelativeLayout>

</LinearLayout>