<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left">

                <TextView
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:text="City Title"
                    android:textSize="30dp"
                    android:id="@+id/favouritesCityTitleTextView"/>

                <TextView
                    android:paddingTop="2dp"
                    android:text="Temp Speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forecastWindSpeedTextView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forecastUnits"
                    android:text="Mph"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp Time"
                    android:id="@+id/forecastTimeTextView"
                    android:gravity="left"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:layout_width="@dimen/compass_card"
                    android:layout_height="@dimen/compass_card"
                    android:id="@+id/miniCompasBackgroundImageView"
                    android:background="@drawable/mini_compass_background"/>

                <ImageView
                    android:layout_width="@dimen/compass_card"
                    android:layout_height="@dimen/compass_card"
                    android:id="@+id/minCompassPointerImageView"
                    android:background="@drawable/compass_pointer"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>






</LinearLayout>